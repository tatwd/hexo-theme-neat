<div id="index__mainer">
  <ul class="sm-container p0 post-list">
    <% site.posts.sort('date', 'desc')
        .slice((page.current-1) * config.per_page, page.current * config.per_page)
        .each(function(post, index) {
    %>
      <li class="post-list__item">
        <div class="post-list__item--date">
          <span class=""><%= date(post.date, 'YYYY-MM-DD') %></span>
        </div>
        <div class="post-list__item--title">
            <h3 class="h3 text-upper m0">
              <%- link_to(post.path, post.title, { class: 'color--black' }) %>
            </h3>
        </div>
      </li>
    <% }) %>
    <% if (page.total > 1) { %>
      <div style="display:block">
        <%- paginator({
          prev_text: '«',
          next_text: '»'
        }) %>
      </div>
    <% } %>
   </ul>
</div>
